{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug app + prebuild",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}\\dist\\main.js",
            "preLaunchTask": "npm: build:nest",
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
        },
        {
            "name": "Debug tests",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test"],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true
          },
        // This task is useful only when we srart debug using scripts like 'npm run start:debug' of 'npm run test:debug'
        // VS code debug inspector attaches to existing WS process
        {
            "name": "Connect to WS",
            "type": "pwa-node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "(old) Debug BFF App",
            "program": "${workspaceRoot}\\dist\\main.js",
            "sourceMaps": true,
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "(old) Debug BFF tests",
            "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
    ]
}
